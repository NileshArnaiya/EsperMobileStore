<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MobilePhonesHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_22e37"
            android:padding="10sp"
            android:text="@string/mobile_phones"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_25sp" />

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mobilecardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MobilePhonesHeading"
            android:layout_margin="5dp"
            android:background="@color/light_gray"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_size_120sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mobilephone"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="@dimen/dimen_100dp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/mobile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@id/mobilephone"
                    android:padding="10sp"

                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/feature_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mobile_name"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@id/mobilephone"
                    android:padding="10sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/option_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/feature_id"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@id/mobilephone"
                    android:padding="10sp"
                    android:textColor="@color/black" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>