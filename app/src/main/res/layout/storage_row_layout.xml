<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/StorageFeaturesHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/teal_700"
            android:padding="@dimen/text_10sp"
            android:text="@string/storage_features"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_25sp" />

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/storagecardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StorageFeaturesHeading"
            android:layout_margin="5dp"
            android:background="@color/light_gray"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_120sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/storageicon"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="@dimen/dimen_100dp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/storagefeature_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@id/storageicon"
                    android:padding="@dimen/text_10sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/storagefeature_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/storagefeature_name"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@id/storageicon"
                    android:padding="@dimen/text_10sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/storageoption_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/storagefeature_id"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@id/storageicon"
                    android:padding="@dimen/text_10sp"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>